/// Dòng chi tiết lịch sử xuất (lưu bản cuối trong ngày)
model StockOutHistoryItem {
  id               BigInt        @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId         String        @unique @db.Uuid
  historyId        BigInt
  history          StockOutHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  /// Lưu lại ngày nghiệp vụ để tối ưu truy vấn/partitioning
  stockDate        DateTime      @db.Date
  ingredientId     Int
  ingredient       Ingredient    @relation(fields: [ingredientId], references: [id])
  quantity         Decimal       @db.Decimal(12, 3)
  note             String?       @db.VarChar(255)

  createdByUserId  Int
  createdAt        DateTime      @default(now())
  updatedByUserId  Int?
  updatedAt        DateTime?     @updatedAt

  @@index([historyId], map: "idx_stock_out_hist_item_hist")
  @@index([stockDate, ingredientId], map: "idx_stock_out_hist_item_date_ing")
  @@index([ingredientId], map: "idx_stock_out_hist_item_ing")
  @@map("stock_out_history_items")
}

/// Snapshot xuất theo ngày (per ingredient)
model StockOutSnapshot {
  id             Int        @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId       String     @unique @db.Uuid
  /// Ngày nghiệp vụ (date-only)
  stockDate      DateTime   @db.Date
  /// Nguyên liệu
  ingredientId   Int
  ingredient     Ingredient @relation(fields: [ingredientId], references: [id])
  /// Tổng xuất trong ngày
  quantityOut    Decimal    @db.Decimal(12, 3)
  /// Thời gian tạo/cập nhật
  createdAt      DateTime   @default(now())
  updatedAt      DateTime?  @updatedAt

  @@unique([stockDate, ingredientId], map: "uniq_stock_out_snapshot_date_ing")
  @@index([ingredientId, stockDate], map: "idx_stock_out_snapshot_ing_date")
  @@index([stockDate], map: "idx_stock_out_snapshot_date")
  @@map("stock_out_snapshot")
}

/// Cấu hình hệ thống (key-value)
model SystemSetting {
  key       String   @id @db.VarChar(64)
  value     String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}
