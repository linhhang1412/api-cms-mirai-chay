/// Bảng lịch sử xuất (header)
model StockOutHistory {
  id               BigInt      @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId         String      @unique @db.Uuid
  /// Tham chiếu (nếu còn) tới bản ghi daily
  dailyId          Int?
  daily            StockOutDaily? @relation(fields: [dailyId], references: [id], onDelete: SetNull)
