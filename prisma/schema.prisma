generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Vai trò của người dùng trong hệ thống
enum Role {
  ADMIN
  MANAGER
  STAFF
}

/// Trạng thái tài khoản
enum Status {
  ACTIVE
  INACTIVE
}

/// Người dùng hệ thống CMS (quản lý nguyên liệu cửa hàng đồ ăn chay)
model User {
  /// Khóa chính nội bộ (int autoincrement)
  id            Int        @id @default(autoincrement())
  /// Định danh public (UUID) – service sẽ generate
  publicId      String     @unique @db.Uuid
  /// Email dùng để đăng nhập và nhận mã OTP (duy nhất)
  email         String     @unique(map: "uniq_user_email") @db.VarChar(100)
  /// Họ và tên người dùng
  fullName      String?    @db.VarChar(100)
  /// Số điện thoại (tùy chọn)
  phone         String?    @db.VarChar(20)
  /// Vai trò người dùng (mặc định: STAFF)
  role          Role       @default(STAFF)
  /// Ảnh đại diện (URL)
  avatar        String?    @db.VarChar(255)
  /// Trạng thái tài khoản (mặc định: ACTIVE)
  status        Status     @default(ACTIVE)
  /// Thời gian đăng nhập thành công lần cuối
  lastLoginAt   DateTime?
  /// Thời gian gửi OTP lần cuối
  lastOtpSentAt DateTime?
  /// Thời gian thử đăng nhập thất bại lần cuối
  failedLoginAt DateTime?
  /// Thời gian tạo bản ghi
  createdAt     DateTime
  /// Thời gian cập nhật bản ghi
  updatedAt     DateTime
  emailOtps     EmailOtp[]

  @@index([status], map: "idx_user_status")
  @@index([role], map: "idx_user_role")
  @@index([status, role], map: "idx_user_status_role")
  @@index([email, status], map: "idx_user_email_status")
  @@index([lastLoginAt], map: "idx_user_last_login")
  @@index([lastOtpSentAt], map: "idx_user_last_otp_sent")
  @@map("users")
}

/// Mã OTP (một lần dùng) gửi qua email để đăng nhập không mật khẩu
model EmailOtp {
  /// Khóa chính nội bộ
  id        Int      @id @default(autoincrement())
  /// Email nhận mã OTP
  email     String   @db.VarChar(100)
  /// Mã OTP 6 chữ số
  code      String   @db.VarChar(6)
  /// Thời hạn hiệu lực
  expiresAt DateTime
  /// Số lần nhập sai mã
  attempts  Int      @default(0)
  /// Mã đã được dùng để đăng nhập chưa?
  used      Boolean  @default(false)
  /// Thời gian tạo bản ghi
  createdAt DateTime
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([email, code, used], name: "uniq_active_otp")
  @@index([email], map: "idx_otp_email")
  @@index([expiresAt], map: "idx_otp_expires")
  @@index([createdAt], map: "idx_otp_created")
  @@index([email, expiresAt, used], map: "idx_otp_active")
  @@map("email_otps")
}

/// Danh mục nguyên liệu
model IngredientCategory {
  id        Int          @id @default(autoincrement())
  code      String       @unique(map: "uniq_ingredient_category_code") @db.VarChar(32)
  name      String       @db.VarChar(120)
  active    Boolean      @default(true)
  createdAt DateTime
  updatedAt DateTime

  ingredients Ingredient[]

  @@index([active], map: "idx_ing_cat_active")
  @@index([name], map: "idx_ing_cat_name")
  @@map("ingredient_categories")
}

/// Đơn vị nguyên liệu (tách bảng riêng)
model IngredientUnit {
  id        Int     @id @default(autoincrement())
  code      String  @unique(map: "uniq_ingredient_unit_code") @db.VarChar(32)
  name      String  @db.VarChar(120)
  active    Boolean @default(true)
  createdAt DateTime
  updatedAt DateTime

  ingredients Ingredient[]

  @@index([active], map: "idx_ing_unit_active")
  @@index([name], map: "idx_ing_unit_name")
  @@map("ingredient_units")
}

/// Nguyên liệu (chỉ cấu hình, phục vụ nhập/xuất về sau)
model Ingredient {
  /// Khóa chính nội bộ (int autoincrement)
  id            Int          @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId      String       @unique @db.Uuid
  /// Mã ngắn duy nhất (SKU)
  code          String       @unique(map: "uniq_ingredient_code") @db.VarChar(32)
  /// Tên nguyên liệu
  name          String       @db.VarChar(120)
  /// Liên kết danh mục
  categoryId    Int?
  category      IngredientCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  /// Liên kết đơn vị
  unitId        Int?
  unit          IngredientUnit? @relation(fields: [unitId], references: [id], onDelete: SetNull)
  /// Giá tham chiếu (VND)
  referencePrice Decimal?     @db.Decimal(12, 2)
  /// Trạng thái hoạt động
  status        Status       @default(ACTIVE)
  /// Thời gian tạo/cập nhật
  createdAt     DateTime
  updatedAt     DateTime

  // Back-relations for stock-in entries
  stockInDailyItems     StockInDailyItem[]
  stockInHistoryItems   StockInHistoryItem[]
  stockInSnapshots      StockInSnapshot[]
  stockOutDailyItems    StockOutDailyItem[]
  stockOutHistoryItems  StockOutHistoryItem[]
  stockOutSnapshots     StockOutSnapshot[]

  @@index([status], map: "idx_ingredient_status")
  @@index([name], map: "idx_ingredient_name")
  @@index([code, status], map: "idx_ingredient_code_status")
  @@map("ingredients")
}

/// Snapshot nhập theo ngày (per ingredient)
model StockInSnapshot {
  id             Int        @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId       String     @unique @db.Uuid
  /// Ngày nghiệp vụ (date-only)
  stockDate      DateTime   @db.Date
  /// Nguyên liệu
  ingredientId   Int
  ingredient     Ingredient @relation(fields: [ingredientId], references: [id])
  /// Tổng nhập trong ngày
  quantityIn     Decimal    @db.Decimal(12, 3)
  /// Thời gian tạo/cập nhật
  createdAt      DateTime   @default(now())
  updatedAt      DateTime?  @updatedAt

  @@unique([stockDate, ingredientId], map: "uniq_stock_in_snapshot_date_ing")
  @@index([ingredientId, stockDate], map: "idx_stock_in_snapshot_ing_date")
  @@index([stockDate], map: "idx_stock_in_snapshot_date")
  @@map("stock_in_snapshot")
}

/// Hành động ghi log lịch sử nhập
// removed AuditAction per request

/// Bảng phiếu nhập trong ngày (đơn giản, phục vụ tính tồn trong ngày)
model StockInDaily {
  id               Int        @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId         String     @unique @db.Uuid
  /// Ngày nghiệp vụ (date-only)
  stockDate        DateTime   @db.Date @default(dbgenerated("CURRENT_DATE"))
  /// Ghi chú
  note             String?    @db.VarChar(255)

  /// Người tạo/sửa và thời gian
  createdByUserId  Int
  createdAt        DateTime   @default(now())
  updatedByUserId  Int?
  updatedAt        DateTime?  @updatedAt

  items            StockInDailyItem[]
  histories        StockInHistory[]

  @@index([stockDate], map: "idx_stock_in_daily_date")
  @@index([createdByUserId], map: "idx_stock_in_daily_created_by")
  @@index([updatedByUserId], map: "idx_stock_in_daily_updated_by")
  @@map("stock_in_daily")
}

/// Dòng chi tiết phiếu nhập trong ngày
model StockInDailyItem {
  id               Int           @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId         String        @unique @db.Uuid
  dailyId          Int
  daily            StockInDaily  @relation(fields: [dailyId], references: [id], onDelete: Cascade)
  /// Lưu lại ngày nghiệp vụ để truy vấn/validate nhanh, đồng bộ với header
  stockDate        DateTime      @db.Date
  ingredientId     Int
  ingredient       Ingredient    @relation(fields: [ingredientId], references: [id])
  quantity         Decimal       @db.Decimal(12, 3)
  note             String?       @db.VarChar(255)

  createdByUserId  Int
  createdAt        DateTime      @default(now())
  updatedByUserId  Int?
  updatedAt        DateTime?     @updatedAt

  @@index([dailyId], map: "idx_stock_in_daily_item_daily")
  @@index([stockDate, ingredientId], map: "idx_stock_in_daily_item_date_ing")
  @@index([ingredientId], map: "idx_stock_in_daily_item_ingredient")
  @@map("stock_in_daily_items")
}

/// Bảng lịch sử nhập (append-only, lưu delta khi tạo/sửa/xóa trong ngày)
model StockInHistory {
  id               BigInt      @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId         String      @unique @db.Uuid
  /// Tham chiếu (nếu còn) tới bản ghi daily
  dailyId          Int?
  daily            StockInDaily? @relation(fields: [dailyId], references: [id], onDelete: SetNull)
  /// Ngày nghiệp vụ (date-only)
  stockDate        DateTime    @db.Date
  /// Ghi chú phiếu (nếu cần)
  note             String?     @db.VarChar(255)

  /// Audit tối giản
  createdByUserId  Int
  createdAt        DateTime    @default(now())
  updatedByUserId  Int?
  updatedAt        DateTime?   @updatedAt

  items            StockInHistoryItem[]

  @@index([stockDate], map: "idx_stock_in_hist_date")
  @@index([createdByUserId], map: "idx_stock_in_hist_created_by")
  @@index([updatedByUserId], map: "idx_stock_in_hist_updated_by")
  @@map("stock_in_history")
}

/// Dòng chi tiết lịch sử nhập (lưu bản cuối trong ngày)
model StockInHistoryItem {
  id               BigInt        @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId         String        @unique @db.Uuid
  historyId        BigInt
  history          StockInHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  /// Lưu lại ngày nghiệp vụ để tối ưu truy vấn/partitioning
  stockDate        DateTime      @db.Date
  ingredientId     Int
  ingredient       Ingredient    @relation(fields: [ingredientId], references: [id])
  quantity         Decimal       @db.Decimal(12, 3)
  note             String?       @db.VarChar(255)

  createdByUserId  Int
  createdAt        DateTime      @default(now())
  updatedByUserId  Int?
  updatedAt        DateTime?     @updatedAt

  @@index([historyId], map: "idx_stock_in_hist_item_hist")
  @@index([stockDate, ingredientId], map: "idx_stock_in_hist_item_date_ing")
  @@index([ingredientId], map: "idx_stock_in_hist_item_ing")
  @@map("stock_in_history_items")
}

/// Bảng phiếu xuất trong ngày (header)
model StockOutDaily {
  id               Int        @id @default(autoincrement())
  /// Định danh public (UUID)
  publicId         String     @unique @db.Uuid
